{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "src/config/product.ts",
    "src/i18n/**/*.ts",
    "src/i18n/**/*.tsx",
    "src/lib/cache-version-plugin.ts",
    "src/stores/userStore.ts"
  ]
}
